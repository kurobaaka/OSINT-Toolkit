{
    "manifest_version": 3,
    "name": "OSINT Toolkit",
    "version": "1.0.0",
    "description": "Инструменты для Open Source Intelligence",
    "permissions": [
      "activeTab",
      "contextMenus",
      "storage"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }